<li>
  <%if user.attachment.file?%>
  <%= image_tag user.attachment.url, :height => 40, :width => 40 %>
  <%else%>	
  <%= image_tag 'no_image.png', :height => 40, :width => 40%>
  <%end%>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>